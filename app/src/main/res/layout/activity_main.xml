<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="top|center_horizontal"
        android:text="Add Item"
        android:textColor="#640A87"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/id_calorieIntake"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:gravity="center_horizontal"
        android:text="Recommended Daily Calorie Intake: "
        android:textColor="#4CAF50"
        android:textSize="20dp"
        app:fontFamily="@font/anaheim" />

    <Button
        android:id="@+id/id_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="CLICK TO CALCULATE RECOMMENDED"
        android:textColor="#640A87" />

    <TextView
        android:id="@+id/id_calorieNum"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/id_calculate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#FF5722"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/id_todayCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_calculate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="180dp"
        android:text="Today's Calories: "
        android:textColor="#0A24B5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-smallcaps" />

    <Button
        android:id="@+id/id_resetCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_calorieNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Reset Calories"
        android:textColor="#640A87"
        android:textSize="12sp" />


</RelativeLayout>